// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  email     String    @unique
  password  String
  image     String

  groupIDs  String[]  @db.ObjectId
  groups    Group[]   @relation(fields: [groupIDs], references: [id]) //not in DB
}

model Group {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String

  userIDs   String[] @db.ObjectId
  users     User[]   @relation(fields: [userIDs], references: [id]) //not in DB

  mediaIDs  String[] 
  media     Media @relation(fields: [mediaIDs], references: [id]) //not in DB
}

model Media{
  id      String   @id @map("_id") //use TMDB id as primary id - do not autogen
  title   String
  poster_path   String

  groups Group[]
}

